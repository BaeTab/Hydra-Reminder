<Window x:Class="Hydra_Reminder.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hydra - Report" Width="760" Height="560" WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="24" Background="{StaticResource WindowGradient}" BorderBrush="#3DFFFFFF" BorderThickness="1">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="56"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Width="44" Height="44" CornerRadius="22" Background="#305A8FFF" BorderBrush="#50FFFFFF" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="R" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Hydra Report" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Recent Stats" FontSize="12" Foreground="#CCFFFFFF"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource WindowIconButton}" Content="X" ToolTip="Close" Click="Close_Click" Background="#FF5555" BorderBrush="#FF7777"/>
                </StackPanel>
                <Rectangle Grid.ColumnSpan="2" Fill="Transparent" MouseLeftButtonDown="DragMove_Window"/>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="8,0,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top toolbar -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12" HorizontalAlignment="Left">
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource ToastButtonStyle}" Width="100" Margin="0,0,8,0"/>
                    <Button Content="Export" Command="{Binding ExportCommand}" Style="{StaticResource ToastButtonStyle}" Width="100" Margin="0,0,8,0"/>
                    <Button Content="Reset" Command="{Binding ResetCommand}" Style="{StaticResource ToastDestructiveButtonStyle}" Width="100"/>
                    <TextBlock Text="{Binding ExportPath}" FontSize="11" Foreground="#88FFFFFF" TextTrimming="CharacterEllipsis" Margin="16,8,0,0" Width="240"/>
                </StackPanel>

                <!-- Main area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Metrics -->
                    <Border BorderBrush="#444" Background="#252A3A" BorderThickness="1" Padding="16" CornerRadius="14" Margin="0,0,16,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Summary" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <UniformGrid Grid.Row="1" Columns="2" Margin="0,12,0,0">
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Total" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding TotalCount}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Average" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding AverageCount}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Max" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding MaxCount}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Min" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding MinCount}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Today" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding TodayCount}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Vs Avg %" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding TodayVsAveragePercent, StringFormat={}{0:F0}%}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Trend" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding TrendText}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Days" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock Text="{Binding Logs.Count}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>

                    <!-- Charts and data -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="#444" Background="#252A3A" BorderThickness="1" Padding="16" CornerRadius="14" Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="Last Days" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,28,0,0">
                                    <ItemsControl ItemsSource="{Binding ChartItems}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="6,0" VerticalAlignment="Bottom">
                                                    <Border Background="{StaticResource AccentBrush}" Width="24" Height="{Binding Count, Converter={StaticResource BarHeightConverter}}" CornerRadius="6"/>
                                                    <TextBlock Text="{Binding Date, StringFormat=MM-dd}" FontSize="10" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="#D0D6E2"/>
                                                    <TextBlock Text="{Binding Count}" FontSize="10" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <Border Grid.Row="1" BorderBrush="#444" Background="#252A3A" BorderThickness="1" Padding="16" CornerRadius="14">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Raw Data" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <DataGrid Grid.Row="1" Margin="0,8,0,0" ItemsSource="{Binding Logs}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Background="#222" Foreground="White" BorderThickness="0" RowBackground="#222" AlternatingRowBackground="#252525" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                        <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>